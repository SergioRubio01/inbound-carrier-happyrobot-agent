# POSTGRES
POSTGRES_DB=happyrobot
POSTGRES_USER=happyrobot
POSTGRES_PASSWORD=happyrobot
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Other configuration
API_BASE_URL=http://localhost:8000

# Security Configuration
# Set to true when deploying with HTTPS/SSL certificates
# This enables HSTS (HTTP Strict Transport Security) headers
ENABLE_HTTPS=false

# Logging Configuration
LOG_LEVEL=info

# PGAdmin Configuration
# These are the login credentials for pgAdmin web interface at http://localhost:5050
PGADMIN_DEFAULT_EMAIL=admin@local.host
PGADMIN_DEFAULT_PASSWORD=admin

# API Keys
API_KEY=<YOUR_API_KEY>
HAPPYROBOT_API_KEY=<YOUR_HAPPYROBOT_API_KEY>


# AWS (Optional - for local dev, can be empty)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-south-2

# Pulumi Configuration
PULUMI_ACCESS_TOKEN=
PULUMI_CONFIG_PASSPHRASE=

# Environment (dev=development, prod=production)
ENVIRONMENT=dev

# Business Logic Configuration
MAX_LOAD_WEIGHT_LBS=80000
MAX_REFERENCE_NUMBER_COUNTER=99999
MAX_RATE_AMOUNT=999999.99
